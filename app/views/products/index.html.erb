<h1>Product list</h1>

<%= render "flash" %>

<ul class="d-grid gap-3 list-group products-list">
  <% @products.each do |product| %>
    <li class="list-unstyled p-3 border rounded-3 g-col-4">
      <i class="bi bi-camera text-light mx-auto"></i>
      <h5 class="mb-4 text-center text-truncate"><%= product.name %></h5>
      <div class="d-flex align-items-center justify-content-between">
      <b>$<%= product.price %></b>
      <%= link_to product_order_items_path(product), data: { turbo_method: :post }, class: "btn btn-success" do %>
        <i class="bi bi-cart-plus"></i>
      <% end %>
      </div>
    </li>
  <% end %>
</ul>
